<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/text_item">
    <ImageView
        android:id="@+id/support_chat_ticket_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/support_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/support_chat_ticket_image"
        android:layout_toRightOf="@+id/support_chat_ticket_image"
        />
    <TextView
        android:id="@+id/support_chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/support_chat_name"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/support_chat_ticket_image"
        />
</RelativeLayout>


