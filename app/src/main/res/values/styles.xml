<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:state_active">@color/colorMain</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BackgroundTintBlue" >
        <item name="backgroundTint">@color/colorBlue</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="testStyle" >
        <item name="android:color">@color/colorBlack</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChatMessage">
        <item name="android:textColor">@color/colorMessageText</item>
        <item name="android:textSize">@dimen/chat_message_text</item>
        <item name="android:background">@color/colorMessageBackground</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">Roboto-Regular</item>
    </style>

    <style name="edit_text_style">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:popupBackground">#fff</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="MyTextAppearanceTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
    </style>

    <style name="MyTextAppearanceSmall" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">ROBOTO</item>
    </style>



    <style name="MyTextAppearance.gray" parent="MyTextAppearance">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
    </style>



    <style name="PagerTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
    </style>

    <style name="ThemeAccountDetail" parent="@android:style/TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
    </style>

    <style name="ThemeAccountDetailDark">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ThemeAccountDetailLight">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ThemeAccountDetailGreen">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
        <item name="android:textColor">@color/colorGreenBalance</item>
    </style>

    <style name="ThemeAccountDetailBlue">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
        <item name="android:textColor">@color/colorBlueAccountType</item>
    </style>
    <style name="ThemeAccountDetailOrange">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">ROBOTO</item>
        <item name="android:textColor">@color/colorOrangeLeverage</item>
    </style>

    <style name="holoSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
