<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/layoutPayment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/payment_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/payment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ThemeAccountDetailDark"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payment_image"
        app:layout_constraintBottom_toTopOf="@+id/payment_currency"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/payment_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ThemeAccountDetailGreen"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_name"
        app:layout_constraintStart_toEndOf="@+id/payment_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>